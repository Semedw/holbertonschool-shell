#!/usr/bin/env bash
#blablabla 

chmod o+w /var/run
PIDFILE="/var/run/myscript.pid"
echo $$ > "$PIDFILE"

# Handle signals
trap 'echo "I hate the kill command"' SIGTERM
trap 'echo "Y U no love me?! "' SIGINT
trap 'rm -f "$PIDFILE"; exit 0' SIGQUIT

# SIGTERM must also delete PID file and exit, so extend it:
trap 'echo "I hate the kill command"; rm -f "$PIDFILE"; exit 0' SIGTERM

while true
do
    echo "To infinity and beyond"
    sleep 1
done
