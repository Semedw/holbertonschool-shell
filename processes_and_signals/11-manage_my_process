#!/usr/bin/env bash
#salam
PIDFILE="/var/run/my_process.pid"
MYCMD="/usr/bin/sleep 1000"

case "$1" in
  start)
    if [ -f "$PIDFILE" ]; then
      echo "Process already running"
      exit 0
    fi

    $MYCMD &
    echo $! > "$PIDFILE"
    ;;

  stop)
    if [ -f "$PIDFILE" ]; then
      kill "$(cat "$PIDFILE")" 2>/dev/null
      rm -f "$PIDFILE"
    fi
    ;;

  restart)
    if [ -f "$PIDFILE" ]; then
      kill "$(cat "$PIDFILE")" 2>/dev/null
      rm -f "$PIDFILE"
    fi

    $MYCMD &
    echo $! > "$PIDFILE"
    ;;

  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
